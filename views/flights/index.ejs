<%- include('../partials/header') %>
<a href="/flights/new">Add New Flight</a>
<table>
	<thead>
		<tr>
			<th>Airline</th>
			<th>Flight Number</th>
			<th>Departs</th>
		</tr>
	</thead>
	<tbody>
		<% flights.forEach(function(flight) { %>
			<tr>
				<td><%= flight.airline %></td>
				<td><%= flight.flightNo %></td>
                <td><%= (flight.departs).toString().slice(4, 16) %></td>
                <td><%= (flight.departs).toLocaleString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true }) %></td>
                <td><a href="/flights/<%= flight._id %>">Details</a></td>
			</tr>
		<% }) %>
	</tbody>
</table>
<%- include('../partials/footer') %>