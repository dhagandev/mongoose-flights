<%- include('../partials/header') %>
<form action="/flights" method="POST">

	<label>Airport</label>
	<input list="airport_enum" name="airport" required="">

	<datalist id="airport_enum">
		<option value="AUS">
		<option value="DAL">
		<option value="LAX">
		<option value="SEA">	
	</datalist>

	<label>Airline</label>
	<input list="flight_enum" name="airline" required>

	<datalist id="flight_enum">
		<option value="American">
		<option value="Southwest">
		<option value="United">
	</datalist>

	<label>Flight No.:</label>
	<input type="number" name="flightNo" min="10" max="9999" required>

	<label>Departure Date</label>
	<input type="datetime-local" name="departs">

	<button type="submit">Save Flight</button>
</form>
<%- include('../partials/footer') %>